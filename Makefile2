docs: FORCE
	pandoc README.md --to rst -o source/readme.rst
	# make a site folder for th
	mkdir -p source/th/; \
	for f in th/*.ipynb;	do \
		echo "$$f"; \
		jupyter nbconvert --to RST --template css/simplerst.tplx "$$f"; \
	done; \
	sleep 1; \
	mv th/*.rst source/th/; \
	for f in th/*.ipynb;	do \
		echo "$$f"; \
		rm -f $${f%.ipynb}.md; \
		rm -f $${f%.ipynb}.html; \
	done; \
	# make a site folder for int
	mkdir -p source/int/; \
	for f in int/*.ipynb;	do \
		echo "$$f"; \
		jupyter nbconvert --to RST --template css/simplerst.tplx "$$f"; \
	done; \
	sleep 1; \
	mv int/*.rst source/int/; \
	for f in int/*.ipynb;	do \
		echo "$$f"; \
		rm -f $${f%.ipynb}.md; \
		rm -f $${f%.ipynb}.html; \
	done; \
	# make a site folder for mat
	mkdir -p source/mat/; \
	for f in mat/*.ipynb;	do \
		echo "$$f"; \
		jupyter nbconvert --to RST --template css/simplerst.tplx "$$f"; \
	done; \
	sleep 1; \
	mv mat/*.rst source/mat/; \
	for f in mat/*.ipynb;	do \
		echo "$$f"; \
		rm -f $${f%.ipynb}.md; \
		rm -f $${f%.ipynb}.html; \
	done

