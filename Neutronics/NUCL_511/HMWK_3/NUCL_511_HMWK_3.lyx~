\end_layout

\begin_layout Plain Layout
\begin_inset Caption

\begin_layout Plain Layout
Energy Spectrum given by 
\begin_inset Formula $\varphi_{1}$
\end_inset

, 
\begin_inset Formula $\varphi_{2}$
\end_inset

, and 
\begin_inset Formula $\varphi_{3}$
\end_inset


\begin_inset CommandInset label
LatexCommand label
name "fig:Energy Spectrum given by varphi1, varphi2, and varphi3"

\end_inset


\end_layout

\end_inset


